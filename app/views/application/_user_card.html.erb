<div class="card">
  <div class="card-image">
    <figure class="image is-4by3">
      <%# <%= image_tag "https://bulma.io/images/placeholders/1280x960.png", alt: "Avatar for #{user.name}" %>
      <%= image_tag user.avatar, alt:  "Avatar for #{user.name}" %>
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <%# <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image"> %>
          <%= image_tag user.avatar, alt:  "Avatar for #{user.name}" %>
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= user.name %> 
          <%= render partial: 'role_tag', locals: { user: user } %>
        </p>
        <p class="subtitle is-6"><%= user.email %></p>
      </div>
    </div>

    <div class="content">
      <p class="keep-format"><%= user.introduction %></p>
      <%= render partial: 'dog_info', locals: { user: user } %>
      <hr>

      <p class="subtitle is-6"><%= translate('usage')%> <%= time_ago_in_words(user.created_at) %></p>
    </div>
  </div>
</div>