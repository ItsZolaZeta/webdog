<% if(conversation.opposed_user(user).nil?) %>
<% else %>
  <li>
    <div class="panel panel-default" data-conversation-id="<%= conversation.id %>">
      <div class="panel-heading media">
        <%= link_to conversation.opposed_user(user).email, '', class: 'toggle-window media-content' %>
        <%= link_to nil, close_conversation_path(conversation), class: "delete media-right", remote: true, method: :post %>
      </div>

      <div class="panel-body" style="display: none;">
        <div class="messages-list">
          <ul>
            <%= render 'conversations/conversation_content', messages: conversation.messages, user: user %>
          </ul>
        </div>
        <form class="new_message">
          <input name="conversation_id" type="hidden" value="<%= conversation.id %>">
          <input name="user_id" type="hidden" value="<%= user.id %>">
          <textarea name="body" class="textarea is-primary" rows="2"></textarea>
          <input type="submit" class="button is-primary is-light is-fullwidth" value="Send">
        </form>
      </div>
    </div>
  </li>
<% end %>


