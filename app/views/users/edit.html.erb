<div class="columns is-mobile">
  <div class="column"></div>

  <div class="column is-two-thirds">
    <div class="box m-6">
      <h1 class="title"><%= translate('edituser') %></h1>
      <%= form_for(@user) do |form| %>
        <% if @user.errors.any? %>
          <%= render partial: 'model_errors', locals: { model: @user } %>
        <% end %>

        <div class="field">
          <%= form.label :name, class: 'label' %>
          <div class="control">
            <%= form.text_field :name, class: 'input', placeholder: "Name" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :email, class: 'label' %>
          <div class="control">
            <%= form.email_field :email, class: 'input', placeholder: 'e.g. hello@gmail.com' %>
          </div>
        </div>

        <div class="field">
          <%= form.label :role, class: 'label' %>
          <div class="control">
            <%= form.select(:role, ['admin', 'trainer', 'client'], {}, class: 'select') %>
          </div>
        </div>

        <div class="field">
          <%= form.label :avatar, class: 'label' %>
          <div class="control">
            <%= form.file_field(:avatar, class: 'input') %>
          </div>
        </div>

        <div class="field">
          <%= form.label :introduction, class: 'label' %>
          <div class="control">
            <%= form.text_area :introduction, class: 'textarea', placeholder: "Introduce yourself!", rows: "5" %>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit translate('update'), class: 'button is-primary' %>
          </div>
          <div class="control">
            <%= link_to translate('cancel'), users_path, class: 'button is-primary is-light' %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>

  <div class="column"></div>

</div>



