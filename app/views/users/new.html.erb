<div class="columns is-mobile">
  <div class="column"></div>

  <div class="column is-two-thirds">
    <div class="box m-6">
      <h1 class="title"><%= translate('signup')%></h1>
      <%= form_for(@user) do |form| %>
        <% if @user.errors.any? %>
          <%= render partial: 'model_errors', locals: { model: @user } %>
        <% end %>

        <div class="field">
          <%= form.label :name, class: 'label' %>
          <div class="control">
            <%= form.text_field :name, class: 'input', placeholder: "Name" %>
          </div>
        </div>

        <div class="field">
          <%= form.label :email, class: 'label' %>
          <div class="control">
            <%= form.email_field :email, class: 'input', placeholder: 'e.g. hello@gmail.com' %>
          </div>
        </div>

        <div class="field">
          <%= form.label :password, class: 'label' %>
          <div class="control">
            <%= form.password_field :password, class: 'input' %>
          </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit translate('signup_action'), class: 'button is-primary' %>
          </div>
          <div class="control">
            <%= link_to translate('cancel'), root_path, class: "button is-primary is-light" %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>

  <div class="column"></div>

</div>
